datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(uuid())
  name          String
  username      String    @unique
  email         String    @unique
  image         String?
  publicKey     String?   
  password      String?
  posterImage   String?
  createdAt     DateTime  @default(now())
  isOnline      Boolean   @default(false)
  lastSeen      DateTime?

  posts         Post[]            @relation("UserPosts")
  rooms         MapRoom[]         @relation("UserRooms")
  mapRooms      MapRoom[]         @relation("MapRoomCreator")
  gigs          Gig[]             @relation("GigCreator")
  followers     User[]            @relation("UserFollows")
  following     User[]            @relation("UserFollows")
  likes         Like[]            @relation("UserLikes")
  comments      Comment[]         @relation("UserComments")
  groupMessages GroupMessage[]    @relation("UserGroupMessages")
  sentDMs       DirectMessage[]   @relation("SentDMs")
  receivedDMs   DirectMessage[]   @relation("ReceivedDMs")
}

model Post {
  id        String   @id @default(uuid())
  username  String
  name      String
  content   String
  imageUrls String[]
  location  String?
  createdAt DateTime @default(now())

  user   User     @relation("UserPosts", fields: [username], references: [username])
  room   MapRoom? @relation("RoomPosts", fields: [roomId], references: [id])
  roomId String?

  likes    Like[]    @relation("PostLikes")
  comments Comment[] @relation("PostComments")
}

model Like {
  id     String @id @default(uuid())
  post   Post   @relation("PostLikes", fields: [postId], references: [id], onDelete: Cascade)
  postId String

  user   User   @relation("UserLikes", fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())

  @@unique([postId, userId])
}

model Comment {
  id      String @id @default(uuid())
  content String
  post    Post   @relation("PostComments", fields: [postId], references: [id], onDelete: Cascade)
  postId  String

  user   User   @relation("UserComments", fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())
}

model MapRoom {
  id          String   @id @default(uuid())
  name        String
  description String?
  latitude    Float
  longitude   Float
  createdAt   DateTime @default(now())

  createdBy User   @relation("MapRoomCreator", fields: [creatorId], references: [id])
  creatorId String

  members  User[]   @relation("UserRooms")
  posts    Post[]   @relation("RoomPosts")
  type     String?
  imageUrl String?
  gigs     Gig[]    @relation("RoomGigs")

  groupMessages GroupMessage[] @relation("RoomGroupMessages")
}

model Gig {
  id          String    @id @default(uuid())
  title       String
  description String?
  latitude    Float
  longitude   Float
  date        DateTime?
  reward      String?
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())

  createdBy User   @relation("GigCreator", fields: [creatorId], references: [id])
  creatorId String

  room   MapRoom? @relation("RoomGigs", fields: [roomId], references: [id])
  roomId String?

  type      String?
  imageUrls String[] @default([])
}

model GroupMessage {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  sender   User     @relation("UserGroupMessages", fields: [senderId], references: [id], onDelete: Cascade)
  senderId String

  room   MapRoom  @relation("RoomGroupMessages", fields: [roomId], references: [id], onDelete: Cascade)
  roomId String

  @@index([roomId])
}

model DirectMessage {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  isRead    Boolean  @default(false)

  senderPublicKey String? 
  nonce String?

  sender   User     @relation("SentDMs", fields: [senderId], references: [id], onDelete: Cascade)
  senderId String

  recipient   User     @relation("ReceivedDMs", fields: [recipientId], references: [id], onDelete: Cascade)
  recipientId String

  @@index([senderId, recipientId])
  @@index([recipientId, senderId])
}
