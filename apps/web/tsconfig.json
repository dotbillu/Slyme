{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@lib/*": [
        "./app/lib/*"
      ],
      "@types": [
        "./app/lib/types.ts"
      ],
      "@store": [
        "./app/lib/store.ts"
      ],
      "@shared/*": [
        "./app/shared/*"
      ],
      "@hooks/*": [
        "./app/hooks/*"
      ],
      "@housecomponents/*": [
        "./app/home/components/*"
      ],
      "@profilecomponents/*": [
        "./app/profile/components/*"
      ],
      "@searchcomponents/*": [
        "./app/search/components/*"
      ],
      "@mapcomponents/*": [
        "./app/map/components/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
